pipeline {
    agent any
    environment {
        GOCACHE = "/tmp"
        GOMODCACHE="/tmp"
    }
    stages {
        stage('Unit Tests - Backend') {
            agent{
                docker {
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                }
            }
            steps {
                dir('bugtracker-backend') {
                    sh 'go test -v ./...'
                }
            }
        }
        stage('Unit Tests - Frontend') {
            agent {
                docker {
                    image 'node:20-alpine'
                    reuseNode true
                }
            }
            steps {
                dir('bugtracker-frontend') {
                    sh '''
                        npm ci
                        npm test
                    '''
                }
            }
        }
        stage('World') {
            steps{
                echo "Welcome Home!"
            }
        }
    }
}
